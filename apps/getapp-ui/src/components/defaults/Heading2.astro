---
const props = Astro.props;
const titleName = (await Astro.slots.render("default")).toLowerCase().replace(/ /g, "-");
---
<h2 {...props} class="heading-level-7 getapp-ui-heading-2">
  <a href={`#${titleName}`}>
  <slot />
  </a>
</h2>

<style lang="scss">
  .getapp-ui-heading-2:not(:first-child) {
    margin-top: 3.25rem;
  }
  </style>